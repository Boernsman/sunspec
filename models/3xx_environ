  12
  int32:920
  int32:0x80000000
  int32:0x80000000
  int32:930
  int32:0x80000000
  int32:0x80000000
}


#
# location
#
model suns {
  name "location"
  did 305 "location"
  datapoints {
    Tm                     { string.10 }
    Date                   { string.08 }
    Loc                    { string.40 }
    Lat                    { int32.-7  units=deg }
    Long                   { int32.-7  units=deg }
    Alt                    { int32     units=m  }
  }
}
