  uint16:0x80000000
  uint16:0x80000000
  uint16:0x80000000
}

#
# irradiance model
#
model suns {
  name "met_irr"
  did 302 "irradiance"
  datapoints repeating {
    GHI   { uint16 units=Wm2 lname=E_Irradiance_Global_Horizontal }
    POAI  { uint16 units=Wm2 lname=E_Irradiance_Plane_of_Array }
    DFI   { uint16 units=Wm2 lname=E_Irradiance_Diffuse }
    DNI   { uint16 units=Wm2 lname=E_Irradiance_Direct }
    OTI   { uint16 units=Wm2 lname=E_Irradiance_Other }
  }
}

#
# back of module temperature
#
model suns {
  name "met_bom"
  did 303 "back of module temperature"
  datapoints repeating {
    TmpBOM { int16.-1 units=Tmp }
  }
}


data suns_met303_test {
  303
  4
  int16:20
  int16:18
  int16:19
  int16:21
} 

#
# inclinometer
#
model suns {
  name "met_incl"
  did 304 "inclinometer"
  datapoints repeating {
    InclX                 { int32.-2 units=deg }
    InclY                 { int32.-2 units=deg }
    InclZ                 { int32.-2 units=deg }
  }
}


data suns_met304_test {
