
#
# environmental models
#

#
# original base meteorological model
# DEPRECATED!  Only shown here for historical reasons
#
model suns {
  name "met"
  did 301 "base meteorological"
  datapoints {
    E_BaseMet_AirTemperature      { int32 units=Tmp      }
    E_BaseMet_RelativeHumidity    { int32 units=percent  }
    E_BaseMet_BarometricPressure  { int32 units=HPa      }
    E_BaseMet_WindSpeed           { int32 units=ms       }
    E_BaseMet_WindDirection       { int32 units=deg      }
    E_BaseMet_Rain                { int32 units=inches   } # yes, inches!
    E_BaseMet_Snow                { int32 units=inches   } # yes, inches!
    E_BaseMet_PPTType             { int32            }
    E_BaseMet_ElectricalField     { int32 units=Vm       }
    E_BaseMet_SurfaceWetness      { int32 units=kOhms    }
    E_BaseMet_SoilMoisture        { int32 units=percent  }
  }
}


data suns_met301_test {
