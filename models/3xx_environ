#
# version 1.1 base meteorological model
#
model suns {
  name "met_v1.1"
  did 307 "meteorological v1.1"
  datapoints {
    TmpAmb         { int16.-1  units=Tmp       }
    RH             { int16     units=percent   }
    Pres           { int16     units=HPa       }
    WndSpd         { int16     units=ms        }
    WndDir         { int16     units=deg       }
    Rain           { int16     units=mm        }
    Snw            { int16     units=mm        }
    PPT            { int16                 }
    ElecFld        { int16     units=Vm        }
    SurWet         { int16     units=kOhms     }
    SoilWet        { int16     units=percent   }
  }
}


data suns_met307_test {
