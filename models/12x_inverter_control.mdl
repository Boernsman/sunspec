#
# inverter nameplate ratings
#
model suns {
    name "inverter nameplate"
    did 120 "inverter nameplate"
    datapoints {
        WRtg            { uint16.WRtg_SF req label="Continous Power Rating" }
        WRtg_SF         { sunssf req }
        VARtg           { uint16 req label="Continuous Apparent Power Rating" }
        VARtg_SF        { sunssf req }
        VArPosRtg       { uint16.VArRtg_SF req label="Continuous Positive VAR Rating" }
        VArNegRtg       { uint16.VArRtg_SF req label="Continuous Negative VAR Rating" }
        VArRtg_SF       { sunssf req }
        Artg            { uint16 req label="Max AC Current Rating" }
        Artg_SF         { sunssf req }
        PFLeadRtg       { int16.PFRtg_SF req label="Min Leading PF Rating" }
        PFLagRtg        { int16.PFRtg_SF req label="Min Lagging PF Rating" }
        PFRtg_SF        { sunssf req }
        WHRtg_SF        { sunssf }
        MaxChgRte       { uint16.MaxChgRte_SF label="Max Charge Rate" }
        MaxChgRte_SF    { int16 }
        MaxDisChgRte    { uint16.MaxDisChgRte_SF label="Min Charge Rate" }
        MaxDisChgRte_SF { int16 }
    }
}

#
# Inverter Control Basic Settings
#
model suns {
    name "inverter basic settings"
    did 121 "inverter basic settings"
    datapoints {
        WMax            { uint16.WMax_SF u=W access=rw req label="Max Power Output Setting" }
        WMax_SF         { sunssf req }
        VMax            { uint16.VMinMax_SF u=V access=rw label="Max Voltage Setting" }
        VMin            { uint16.VMinMax_SF u=V access=rw label="Min Voltage Setting" }
        VMinMax_SF      { sunssf }
        VAMax           { uint16.VAMax_SF u=VA access=rw label="Max Apparent Power" }
        VAMax_SF        { sunssf }
        VArPosMax       { uint16.VArMax_SF u=VAr access=rw label="Max Positive Reactive Power" }
        VArNegMax       { uint16.VArMax_SF u=VAr access=rw label="Max Negative Reactive Power" }
        VArMax_SF       { sunssf access=rw u=VAr }
        VRef            { uint16 u=V access=rw req label="Voltage at PCC" }
        VRefOfs         { int16.VRefOfs_SF u=V access=rw req label="Voltage Offset from PCC" }
        VRefOfs_SF      { sunssf access=rw req }
        WGra            { int16.WGra_SF u=Pct access=rw label="Default Active Power Ramp" }
        WGra_SF         { sunssf }
        PFSign          { enum16.PFSign_enum access=rw label="Poewr Factor Sign Convention" }
        PFLeadMin       { int16.PFMin_SF u=cosT access=rw label="Minimum Leading Power Factor" }
        PFLagMin        { int16.PFMin_SF u=cosT access=rw label="Minimum Lagging Power Factor" }
        PFMin_SF        { sunssf }
        VArAct          { enum16.VArAct_enum access=rw label="VAR Charge/Dischage Action" }
        ClcTotVA        { enum16.ClcTotVA_enum access=rw label="Apparent Power Calculation Method" }
        MaxRmpRte       { uint16.MaxRmpRte_SF u=Pct access=rw label="Maximum Ramp Rate (% Max Nominal Rate)"}
        MaxRmpRte_SF    { sunssf }
        ECPNomHz        { uint16.ECPNomHz_SF u=Hz access=rw label="Nominal ECP Frequency" }
        ECPNomHz_SF     { sunssf }
        ConnPh          { enum16.ConnPh_enum access=rw label="Connected Phase" }
        Rsrvd           { pad }
    }

    define PFSign_enum {
        I_IEC  { 1 "IEC sign convention" }
        I_IEEE { 2 "IEEE sign convention" }
    }

    define VArAct_enum {
        switch   { 1 "switch VAr characterization" }
        maintain { 2 "maintain VAr characterization" }
    }

    define ClcTotVA_enum {
        vector     { 1 "vector calculation" }
        arithmetic { 2 "arithmetic calculation" }
    }
 
    define ConnPh_enum {
        PhA { 1 "phase A" }
        PhB { 2 "phase B" }
        PhC { 3 "phase C" }
    }
}


#
# Measurements Status
#
model suns {
    name "measurements status"
    did 122
    datapoints {
        PVConn                  { enum16.ConnAvail_enum }
        StorConn                { enum16.ConnAvail_enum }
        ECPConn                 { enum16.ECPConn_enum }
        ActWh                   { acc64 u=Wh }
        ActVAh                  { acc64 u=VAh }
        ActVArhQ1               { acc64 u=VArh }
        ActVArhQ2               { acc64 u=VArh }
        ActVArhQ3               { acc64 u=VArh }
        ActVArhQ4               { acc64 u=VArh }
        VArAval                 { uint16.VArAval_SF u=VAr }
        VArAval_SF              { sunssf }
        StSetLimMsk             { bitfield32.StaSetLimMsk_bf }
        StActCtl                { bitfield32.StActCtl_bf }
        TmSrc                   { string.16 }
        CurrTime                { uint32 u=Tms2000 }
        Rsrvd                   { pad }
    }

    define ConnAvail_enum {
        NA                      { 0 "not available" }
        DISCONNECTED_UNAVAIL    { 1 "disconnected unavailable" }
        DISCONNECTED_AVAIL      { 2 "disconnected available" }
        CONNECTED_UNAVAIL       { 3 "connected unavailable" }
        CONNECTED_AVAIL         { 4 "connected available" }
        CONNECTED_ON            { 5 "connected on" }
        TEST_MODE               { 6 "test mode" }
    }

    define ConnBool_enum {
        DISCONNECTED            { 0 "disconnected" }
        CONNECTED               { 1 "connected" }
    }

    define StaSetLimMsk_bf {
        WMax                    { 1 "" }
        VAMax                   { 2 "" }
        VArPosMax               { 3 "" }
        VArNegMax               { 4 "" }
        VArAval                 { 5 "" }
        PFLeadMin               { 6 "" }
        PFLagMin                { 7 "" }
    }

    define StactCtl_bf {
        FixedW                  {  1 "" }
        FixedVAR                {  2 "" }
        FixedPF                 {  3 "" }
        VoltVAr                 {  4 "" }
        FreqWattParam           {  5 "" }
        FreqWattCurve           {  6 "" }
        DynReactiveCurrent      {  7 "" }
        LVRT                    {  8 "" }
        HVRT                    {  9 "" }
        WattPF                  { 10 "" }
        VoltWatt                { 11 "" }
        Scheduled               { 12 "" }
    }
}

        
#
# Immediate Inverter Controls
#
model suns {
    name "Immediate Inverter Controls"
    did 123
    datapoints {
        Mod                 { bitfield16.ImmCtl_bf access=rw req }
        Conn                { enum16.Conn_enum access=rw req }
        Conn_WinTms         { uint16 access=rw u=Tms }
        Conn_RvrtTms        { uint16 access=rw u=Tms }
        WMaxLimPct          { uint16.WMaxLimPct_SF access=rw u=Pct req }
        WMaxLimPct_SF       { sunssf req }
        WMaxLimPct_WinTms   { uint16 access=rw u=Tms }
        WMaxLimPct_RvrtTms  { uint16 access=rw u=Tms }
        WMaxLimPct_RmpTms   { uint16.WMaxLimPct_SF access=rw u=Tms }
        OutPFSet            { int16.OutPFSet_SF u=cosT req access=rw }
        PFExt               { enum16.PFExt_enum access=rw }
        OutPFSet_SF         { sunssf req access=rw }
        OutPFSet_WinTms     { uint16 u=Tms access=rw }
        OutPFSet_RvrtTms    { uint16 u=Tms access=rw }
        OutPFSet_RmpTms     { uint16 u=Tms access=rw }
        VArLim_Mod          { enum16.VArLim_Mode_enum req access=rw }
        VArWMaxPct          { uint16 u=Pct access=rw }
        VArWMaxPct_SF       { sunssf access=rw }
        VArMaxPct           { uint16 u=Pct access=rw }
        VArAvalPct          { uint16 u=Pct access=rw }
        VArPct_SF           { sunssf access=rw }
        VArPct_WinTms       { uint16 u=Tms access=rw }
        VArPct_RvrtTms      { uint16 u=Tms access=rw }
        VArPct_RmpTms       { uint16 u=Tms access=rw }
    }

    define Conn_enum {
        DISCONNECT          { 0 "disconnect from grid" }
        CONNECT             { 1 "connect to gred" }
    }

    define PFExt_enum {
        OVER                { 0 "overexcited" }
        UNDER               { 1 "underexcited" }
    }

    define VArLim_Mode_enum {
        NO_LIMIT            { 0 "no VAR limit" }
        WMAX                { 1 "limit as percentage of WMax" }
        VARMAX              { 2 "limit as percentage of VArMax" }
        VARAVAL             { 3 "limit as percentage of VArAval" }
    }
}


